{
  "name": "effective-mobile",
  "description": "REST API for Users Service",
  "author": "shevernitskiy",
  "version": "1.0.0",
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "module": "src/app.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "dc:dev": "docker compose up -d",
    "dc:prod": "docker compose --profile prod up -d --build",
    "dc:down": "docker compose --profile prod down",
    "dc:stop": "docker compose --profile prod stop",
    "test": "vitest run --no-file-parallelism"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
